[Default]
listen=/var/run/gridinit.sock
pidfile=/var/run/gridinit.pid
uid=admgrid
gid=admgrid
working_dir=/var/run
#env.PATH=/bin:/usr/bin:/usr/local/bin
#env.LD_LIBRARY_PATH=/lib:/usr/lib

limit.core_size=-1
limit.max_files=8192
limit.stack_size=1024

include=/etc/gridinit.conf.d/*


[Alerts]
plugin=/usr/local/lib64/gridinit/gridinit_alert_spoolmess.so
symbol=MODULE_EXPORT
config.sopcode=MUT-GRD-7000
config.code_client=GRID
config.code_projet=HoneyComb

