<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE log4c SYSTEM "">
<log4c version="1.2.1">
    <config>
        <bufsize>2048</bufsize>
        <debug level="4"/>
        <nocleanup>0</nocleanup>
    </config>

    <category name="root" priority="info" appender="HC,common,common,gridinit"/>
    <appender name="HC,common,common,gridinit" type="syslog" layout="basic"/>
    <layout name="basic" type="basic"/>

</log4c>
